#!groovy

node {
    currentBuild.result = "SUCCESS"
    env.CI = "true"
    try {
       stage('Checkout'){
          checkout scm
       }

       stage('BuildAndTest'){
          sh 'docker build -t richardzone/quokka-awesome-project-image .'
          sh 'docker run --rm richardzone/quokka-awesome-project-image npm test'
       }

       stage('DeployToDev'){
          sh 'docker run -d -p 3001:3000 richardzone/quokka-awesome-project-image'
       }

       stage('DeployToTest'){
          sh 'docker run -d -p 3002:3000 richardzone/quokka-awesome-project-image'
       }

       stage('DeployToProd'){
          sh 'docker run -d -p 3003:3000 richardzone/quokka-awesome-project-image'
       }


    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
